{
  "name": "drpack-calendar",
  "version": "0.1.3",
  "main": "dist/index.js",
  "types": "index.d.ts",
  "scripts": {
    "start": "rollup -c rollup.config.ts -w",
    "serve": "webpack-dev-server --open --mode development",
    "lint": "concurrently \"eslint src\" \"prettier --check \"./src/**/*.css\"\" ",
    "lint:write": "prettier --write \"./src/**/*.js\"  \"./src/**/*.css\"",
    "test": "jest ./test --coverage",
    "test:watch": "jest ./test --watch",
    "clean": "rimraf dist",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts",
    "size": "npm run build && size-limit",
    "checkAll": "npm run size && npm run lint && npm run test"
  },
  "files": [
    "dist",
    "index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Kiarash-Z/react-modern-calendar-datepicker.git"
  },
  "bugs": {
    "url": "https://github.com/Kiarash-Z/react-modern-calendar-datepicker/issues"
  },
  "license": "MIT",
  "size-limit": [
    {
      "path": "./dist/index.js",
      "limit": "11 KB"
    }
  ],
  "dependencies": {
    "@dr-package/date": "^0.7.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.8.3",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "@size-limit/preset-small-lib": "^2.2.1",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^10.0.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.2",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "concurrently": "^5.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": ">=1",
    "image-webpack-loader": "^4.6.0",
    "jest": "^25.1.0",
    "lint-staged": ">=8",
    "prettier": "^1.16.4",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.27.8",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-typescript2": "^0.26.0",
    "style-loader": "^0.23.1",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.7.0",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.8.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
